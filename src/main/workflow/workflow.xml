<workflow-app name="SBR Sampling Service" xmlns="uri:oozie:workflow:0.5">
    <start to="shell-32b8"/>
    <kill name="Kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="shell-32b8">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>service-submit.sh</exec>
            <argument>${node}</argument>
            <argument>${user}</argument>
            <argument>${appVersion}</argument>
            <argument>${hiveDatabase}</argument>
            <argument>${hiveFrameTableName}</argument>
            <argument>${stratificationPropertiesFileHdfsFullPath}</argument>
            <argument>${sampleOutputHdfsDirectory}</argument>
            <file>hdfs://${node}/user/${user}/lib/sbr-sampling-service/app/sbr-sampling-service-*.jar#sbr-sampling-service-*.jar</file>
                <capture-output/>
        </shell>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>
